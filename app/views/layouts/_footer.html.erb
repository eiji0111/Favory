<% if customer_signed_in? && !current_page?(root_path) %>
  <footer class="fixed-bottom bg-light" style="height: 60px;">
    <div class="container-fluid">
      <div class="col-11 col-md-6 col-lg-4 mx-auto d-flex align-items-center justify-content-center text-center" style="height: 60px;">
        <%= link_to '', customer_men_path, class: 'col bi bi-square fa-lg' %>
        <%= link_to '', customer_women_path, class: 'col bi bi-circle fa-lg' %>
        <%= link_to '', communities_path, 'data-turbolinks': false, class: 'col bi bi-people fa-lg text-dark' %>
        <%= link_to '', followed_path, class: 'col bi bi-heart fa-lg text-dark' %>
        <%= link_to notifications_path do %>
          <% if unchecked_notifications.any? %>
            <span class="fa-stack fa-sm">
              <i class="bi bi-bell fa-stack-2x text-dark" style="font-size: 1.5em;"></i>    
              <i class="bi bi-circle-fill fa-stack-1x n-circle"></i>
            </span>
          <% else %>
            <i class="col bi bi-bell fa-lg text-dark"></i>
          <% end %>
        <% end %>
        <%= link_to '', customer_path(current_customer), class: "col bi bi-house fa-lg text-dark" %>
      </div>
    </div>
  </footer>
<% else %>
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-12"><%= image_tag 'logo-image.png', size: "110x45" %></div>
        <div class="col-12 d-flex align-items-center">
          <%= link_to '', root_path, class: 'ml-1 fab fa-twitter-square fa-2x pr-1 footer_icon' %>
          <%= link_to '', root_path, class: 'ml-1 fab fa-instagram-square fa-2x pr-1 footer_icon' %>
          <%= link_to '', root_path, class: 'ml-1 fab fa-youtube-square fa-2x pr-1 footer_icon' %>
          <% unless admin_signed_in? %>
            <%= link_to 'お問い合わせ', new_contact_path, class: 'ml-auto btn btn-primary btn-sm rounded-pill' %>
          <% end %>
        </div>
        <div class="col-12"><p><small>&copy; Favory, Inc, Made by Mori</small></p></div>
      </div>
    </div>
  </footer>
<% end %>