<% if customer_signed_in? %>
  <footer class="fixed-bottom bg-light" style="height: 60px;">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-lg-8 mx-auto d-flex align-items-center justify-content-between" style="height: 60px;">
          <%= link_to '', customer_men_path, class: 'ml-1 bi bi-square fa-lg pr-1 footer_icon' %>
          <%= link_to '', customer_women_path, class: 'ml-1 bi bi-circle fa-lg pr-1 footer_icon' %>
          <%= link_to '', customer_path(current_customer), class: 'ml-1 bi bi-house-fill fa-lg pr-1 footer_icon' %>
          <%= link_to '', followed_path, class: 'ml-1 bi bi-heart fa-lg pr-1 footer_icon' %>
          <%= link_to '', communities_path, 'data-turbolinks': false, class: 'ml-1 bi bi-people fa-lg pr-1 footer_icon' %>
          <%= link_to notifications_path do %>
            <% if unchecked_notifications.any? %>
              <span class="fa-stack">
                <i class="far fa-bell fa-lg fa-stack-2x" style="font-size: 1.5em;"></i>    
                <i class="fas fa-circle n-circle fa-stack-1x"></i>
              </span>
            <% else %>
              <i class="far fa-bell fa-lg" style="font-size: 1.5em;"></i>
            <% end %>
          <% end %>
      </div>
    </div>
  </footer>
<% else %>
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-12"><%= image_tag 'logo-image.png', size: "110x45" %></div>
        <div class="col-12 d-flex align-items-center">
          <%= link_to '', root_path, class: 'ml-1 fab fa-twitter-square fa-2x pr-1 footer_icon' %>
          <%= link_to '', root_path, class: 'ml-1 fab fa-instagram-square fa-2x pr-1 footer_icon' %>
          <%= link_to '', root_path, class: 'ml-1 fab fa-youtube-square fa-2x pr-1 footer_icon' %>
          <% unless admin_signed_in? %>
            <%= link_to 'お問い合わせ', new_contact_path, class: 'ml-auto btn btn-primary btn-sm rounded-pill' %>
          <% end %>
        </div>
        <div class="col-12"><p><small>&copy; Favory, Inc, Made by Mori</small></p></div>
      </div>
    </div>
  </footer>
<% end %>