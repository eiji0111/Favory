<% provide(:title, "ログイン") %>
<div class="container">
  <div class="row py-5 d-flex flex-column">
    <div class="col-11 col-md-8 col-lg-6 mx-auto mb-3 p-3 p-md-5 border border rounded-lg shadow bg-white">
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="col text-center text-info"><h3>ログイン</h3></div>
      <div class="form-group pt-3">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, placeholder: 'メールアドレス', class: 'col-10 col-sm-7 mt-4 mx-auto form-control shadow-sm bg-white rounded-pill', required: :required %>
          <%= f.password_field :password, placeholder: 'パスワード', class: 'col-10 col-sm-7 mt-4 mx-auto form-control shadow-sm bg-white rounded-pill', required: :required %>
          <div class="col text-center">
            <%= f.submit 'ログイン', class: 'btn btn-outline-info rounded-pill shadow-sm mt-3' %>
          </div>
        <% end %>
      </div>
      <div class="col text-center text-muted pt-3">
        <small><%= link_to 'パスワードをお忘れですか？', new_customer_password_path, class: 'text-info' %></small>
      </div>
      <div class="col text-center text-muted pt-3">
        <small>アカウントをお持ちでない方は<%= link_to 'こちら', new_customer_registration_path, class: 'text-info' %></small>
      </div>
    </div>
  </div>
</div>