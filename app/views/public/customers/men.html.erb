<div class="container">
  <div class="row">
    <nav class="col-md-3 d-none d-md-block bg-light">
      <div class="sidebar-sticky">
        <%= search_form_for @q, url: customer_men_path do |f| %>
        <div class="col mb-3">
          <%= f.label :address_eq, "居住地" %>
          <%= f.select :address_eq, Customer.addresses.map{|k, v|[k, v]}, {prompt: "選択してください"}, class: 'form-control form-control-sm' %>
        </div>
        <div class="col text-center">
          <%= f.submit " 検 索 ", class: 'btn btn-sm btn-outline-info rounded-pill' %>
        </div>
        <% end %>
      </div>
    </nav>
    <div class="col d-flex justify-content-end align-items-end">
      <%= sort_link(@q, :created_at, "新着順") %>
    </div>
  </div>  
  <div class="row mt-5">
    <% @customers.each do |customer| %>
      <div class="col-6 col-md-3 col-lg-2 text-center mb-4">
        <%= link_to customer_path(customer) do %>
          <%= attachment_image_tag customer, :profile_image, size: '150x150', format: "jpeg",
              fallback: "no-image-man.jpg", style: 'object-fit: cover;', class: 'rounded-circle' %>
        <% end %>
        <p class="mb-0">
          <%= customer.age %>歳 
          <% if customer.address != "秘密" %>
            <%= customer.address %>
          <% end %>
        </p>
        <p>
          <% if (Time.zone.now.prev_day(3)..Time.zone.now).cover?(customer.created_at) %>
            <span class="new-tag">new</span>
          <% end %>
          <%= customer.nickname %>
        </p>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-center">
      <%= paginate @customers %>
    </div>
  </div>
</div>
