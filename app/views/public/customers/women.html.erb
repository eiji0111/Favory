<div class="row mt-5">
  <% @customers.each do |customer| %>
    <div class="col-6 col-md-3 col-lg-2 text-center mb-4">
      <%= link_to customer_path(customer) do %>
        <%= attachment_image_tag customer, :profile_image, size: '150x150', format: "jpeg",
            fallback: "no-image-woman.jpg", style: 'object-fit: cover;', class: 'rounded-circle' %>
      <% end %>
      <p class="mb-0">
        <%= customer.age %>歳 
        <% if customer.address != "秘密" %>
          <%= customer.address %>
        <% end %>
      </p>
      <p><%= customer.nickname %></p>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col d-flex justify-content-center">
    <%= paginate @customers %>
  </div>
</div>