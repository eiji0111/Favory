<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class="col rounded-pill py-2 my-3 border shadow">
  <%= link_to customer_path(visitor) do %>
  <%= attachment_image_tag visitor, :profile_image,size: "40x40", format: "jpeg",
      fallback: "no-image.jpg", style: 'object-fit: cover;', class: 'rounded-circle' %>
  <% end %>
  <strong><%= visitor.nickname %></strong>
  <%= 'さんが' %>
  <% case notification.action %>
  <% when 'follow' then %>
    <%= "あなたをフォローしました" %>
  <% end %>
  <small><%= time_ago_in_words(notification.created_at).upcase %>前</small>
</div>
  