<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class="rounded-pill py-2 my-3 border shadow">
  <%= link_to customer_path(visitor) do %>
    <% if visitor.sex == 'man' %>
      <%= attachment_image_tag visitor, :profile_image, size: "35x35", format: "jpeg",
          fallback: "no-image-man.jpg", style: 'object-fit: cover;', class: 'ml-3 rounded shadow-sm' %>
    <% else %>
      <%= attachment_image_tag visitor, :profile_image, size: "35x35", format: "jpeg",
          fallback: "no-image-woman.jpg", style: 'object-fit: cover;', class: 'ml-3 rounded-circle shadow-sm' %>
    <% end %>
  <% end %>
  <small><%= time_ago_in_words(notification.created_at).upcase %>前</small>
  <div class="col">
    <strong><%= visitor.nickname %></strong>
    <%= 'さんが' %>
    <% case notification.action %>
    <% when 'follow' then %>
      <%= "あなたをふぁぼしました" %>
    <% when 'chat' then %>
      <strong><%= link_to "メッセージ", chat_path(notification.visitor.id) %></strong>を送信しました！
    <% end %>
  </div>
</div>
  