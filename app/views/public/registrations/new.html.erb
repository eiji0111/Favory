<div class="container">
  <div class="row my-5 d-flex flex-column">
    <div class="col-10 col-md-8 col-lg-6 mx-auto mb-3 p-3 p-md-5 border border-dark rounded-lg shadow">
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="col text-center"><h3>新規登録</h3></div>
      <div class="col form-group">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
            html: { class: "needs-validation", novalidate: :novalidate }) do |f| %>
          <%= f.label :name, class: 'col col-md-4 offset-md-1 mt-3' %>
          <%= f.text_field :name, class: 'col-10 col-md-7 mx-auto form-control', required: :required %>
          <div class="invalid-feedback col-11 col-md-8 mx-auto">お名前を入力して下さい</div>
          <%= f.label :nickname, class: 'col col-md-5 offset-md-1 mt-3' %>
          <%= f.text_field :nickname, class: 'col-10 col-md-7 mx-auto form-control', required: :required %>
          <div class="invalid-feedback col-11 col-md-8 mx-auto">ニックネームを入力して下さい</div>
          <%= f.label :email, class: 'col col-md-5 offset-md-1 mt-3' %>
          <%= f.email_field :email, class: 'col-10 col-md-7 mx-auto form-control', required: :required %>
          <div class="invalid-feedback col-11 col-md-8 mx-auto">メールアドレスを入力して下さい</div>
          <%= f.label :birthday, class: 'col col-md-4 offset-md-1 mt-3' %>
          <div class="col text-center">
            <%= f.date_select :birthday, use_month_numbers: true,start_year: 1971,
                end_year: (Time.now.year - 10), default: Date.new(1996, 1, 1), class: 'form-control' %>
          </div>
          <%= f.label :sex, class: 'col col-md-3 offset-md-1 mt-3' %>
          <div class="col text-center">
            <%= f.radio_button :sex, :man %>
            <%= f.label :sex, "男性", value: :man %>
            <%= f.radio_button :sex, :woman %>
            <%= f.label :sex, "女性", value: :woman %>
          </div>
          <%= f.label :password, class: 'col col-md-4 offset-md-1 mt-3' %>
          <%= f.password_field :password, class: 'col-10 col-md-7 mx-auto form-control', required: :required %>
          <div class="invalid-feedback col-11 col-md-8 mx-auto">パスワードを入力して下さい</div>
          <div class="col text-center">
            <%= f.submit '新規登録', class: 'btn btn-primary rounded-pill mt-3' %>
          </div>
          <div class="col text-center mt-3">
            <%= link_to 'アカウントをお持ちの方はこちらから', new_customer_session_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
