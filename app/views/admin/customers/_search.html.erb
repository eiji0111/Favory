<nav id="collapseSearch" class="mb-3 collapse">
  <%= search_form_for q, url: url_type, class: 'py-2 border shadow-sm rounded' do |f| %>
    <div class="col-2 mb-3">
      <%= f.label :sorts, ' 並び替え', class: 'fas fa-search' %>
      <%= f.select( :sorts, { '並び替え': 'id asc', '新着順': 'created_at desc', '年齢順（若い順）': 'birthday desc' },
                            { onchange: 'this.form.submit()'}, class: 'form-control form-control-sm') %>
    </div>
    <div class="col-12 fas fa-search mb-1"> 詳細検索</div>
    <div class="row px-3">
      <div class="col-2">
        <%= f.label :id, "ID", class: 'col-form-label' %>
        <%= f.search_field :id_eq, class: 'form-control form-control-sm' %>
      </div>
      <div class="col-2">
        <%= f.label :name, "名前", class: 'col-form-label' %>
        <%= f.search_field :name_cont, class: 'form-control form-control-sm' %>
      </div>
      <div class="col-2">
        <%= f.label :nickname_cont, 'ニックネーム', class: 'col-form-label' %>
        <%= f.search_field :nickname_cont, class: 'form-control form-control-sm' %>
      </div>
      <div class="col-2">
        <%= f.label :address_eq, "居住地", class: 'col-form-label' %>
        <%= f.select :address_eq, Customer.addresses.map{|k, v|[k, v]}, {prompt: "選択してください"}, class: 'form-control form-control-sm' %>
      </div>
      <div class="col-2">
        <%= f.label :birthday_to_age_gteq, "年齢", class: 'col-form-label' %>
        <div class="form-row">
          <div class="form-group col">
            <%= f.number_field :birthday_to_age_gteq, placeholder: '歳', class: 'form-control form-control-sm' %>
          </div>
          〜
          <div class="form-group col">
            <%= f.number_field :birthday_to_age_lt, placeholder: '歳', class: 'form-control form-control-sm' %>
          </div>
        </div>
      </div>
    </div>
    <div class="row px-3">
      <div class="col-2">
        <p class="m-0">自衛官認証</p>
        <%= f.radio_button :army_flag_eq, '', checked: true %>
        <%= f.label :army_flag_eq, "指定しない", value: '', class: 'm-0' %><br>
        <%= f.radio_button :army_flag_eq, true %>
        <%= f.label :army_flag_eq, "承認", value: true, class: 'mr-2' %>
        <%= f.radio_button :army_flag_eq, false %>
        <%= f.label :army_flag_eq, "非承認", value: false, class: 'mr-2' %>
      </div>
      <div class="col-2">
        <p class="m-0">会員ステータス</p>
        <%= f.radio_button :is_valid_eq, '', checked: true %>
        <%= f.label :is_valid_eq, "指定しない", value: '', class: 'm-0' %><br>
        <%= f.radio_button :is_valid_eq, true %>
        <%= f.label :is_valid_eq, "有効", value: true, class: 'mr-2' %>
        <%= f.radio_button :is_valid_eq, false %>
        <%= f.label :is_valid_eq, "無効", value: false, class: 'mr-2' %>
      </div>
    </div>
    <div class="col my-2 text-center">
      <%= f.submit " 検 索 ", class: 'btn btn-sm btn-outline-info rounded-pill shadow-sm' %>
    </div>
  <% end %>
</nav>
