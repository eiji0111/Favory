<div class="row my-5 d-flex flex-column">
  <div class="col-10 col-md-8 col-lg-5 mx-auto p-3 p-md-5 border border-dark rounded-lg shadow">
    <div class="col text-center"><h3>管理者ログイン</h3></div>
    <div class="col form-group">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.label :email, class: 'col col-md-3 offset-md-1' %>
        <%= f.email_field :email, class: 'col-10 col-md-7 mx-auto mb-3 form-control' %>
        <%= f.label :password, class: 'col col-md-3 offset-md-1' %>
        <%= f.password_field :password, class: 'col-10 col-md-7 mx-auto mb-3 form-control' %>
        <div class="col text-center">
          <%= f.submit 'ログイン', class: 'btn btn-primary rounded-pill' %>
        </div>
      <% end %>
    </div>
  </div>
</div>