<div class="row my-5 d-flex flex-column">
  <div class="col-6 mx-auto p-5 border border-dark rounded-lg shadow">
    <div class="col text-center"><h1>管理者ログイン</h1></div>
    <div class="col form-group">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email, class: 'mb-3 form-control' %>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'mb-5 form-control' %>
    <div class="col text-center">
      <%= f.submit 'ログイン', class: 'btn btn-primary btn-lg rounded-pill' %>
    </div>
      <% end %>
    </div>
  </div>
</div>