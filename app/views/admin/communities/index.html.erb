<% provide(:title, "コミュニティ一覧（管理者）") %>
<div class="container-fluid">
  <div class="row">
    <%= render 'admin/shared/sidebar' %>
    <div class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="col-12 my-3"><h3>コミュニティ一覧</h3></div>
      <table class="table table-hover rounded shadow-sm">
        <thead>
          <tr>
            <th scope="col">コミュニティID</th>
            <th scope="col">コミュニティ名</th>
            <th scope="col">コミュニティ概要</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @communities.each do |community| %>
            <tr>
              <th scope="row"><%= community.id %></th>
              <td>
                <%= link_to admin_community_path(community) do %>
                  <%= community.name %>
                <% end %>
              </td>
              <td><%= community.introduction %></td>
              <td><%= community.valid_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-12 d-flex justify-content-center">
        <%= paginate @communities %>
      </div>
    </div>
  </div>
</div>