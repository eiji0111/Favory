<div class="container">
  <div class="row">
    <div class="col-12">
      <h3>コミュニティ編集</h3>
    </div>
    <%= form_with model: @community, url: admin_community_path(@community), local: true do |f| %>
      <div class="col-6 form-group">
        <%= attachment_image_tag(@community, :community_image, size: "150x150",
            fallback: "no-image.png", style: 'object-fit: cover;', class: 'card-img-top') %>
        <%= f.attachment_field :community_image, class: "form-control-file" %>
      </div>
      <div class="col-6">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :owner_nickname %>
          <%= f.text_field :owner_nickname, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :valid_status %>
          <%= f.select :valid_status, Community.valid_statuses.keys, class: "form-control" %>
        </div>
      </div>
      <div class="col-6 mx-auto">
        <%= f.submit '変更する', class: 'btn btn-primary mr-3' %>
        <%= link_to '削除する', admin_community_path(@community), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>